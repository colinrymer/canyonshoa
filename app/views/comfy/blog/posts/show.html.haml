= link_to "Back to all news", "/news"
%h1= @post.title
%p.date
  = @post.published_at.in_time_zone(ActiveSupport::TimeZone.new('Eastern Time (US & Canada)')).strftime('%l:%M %p, %B %-d, %Y')
%p.content
  = @post.content.html_safe
%hr
%p.author
  = @post.author

%section.comments
  %h2 Comments
  - @post.comments.published.each do |comment|
    .comment
      .comment-image
      .comment-content
        %h1
          = comment.author
        %p
          = comment.content
        %p.comment-detail
          = comment.updated_at.in_time_zone(ActiveSupport::TimeZone.new('Eastern Time (US & Canada)')).strftime('%l:%M %p, %B %-d, %Y')
  
  = render :partial => 'comfy/blog/comments/form'
